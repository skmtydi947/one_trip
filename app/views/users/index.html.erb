<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">ユーザー覧</h1>
    </div>
    <div class="row justify-content-center">
      <% @users.each do |user| %>
      <div class="one-post card w-100 h-10">
        <%= link_to user_path(user) do %>
        <p class="caption h4 ml-2"><%= user.name %></p>
        <div class="d-flex align-items-center">
        <%= attachment_image_tag user, :profile_image, size: '80x80', fallback: "logo.png", class: "profile-img ml-1" %>
        <h4 class="ml-2"><%= user.profile %></h4>
        </div>
        <p class="caption ml-3"><%= "#{user.posts.count} 投稿" %></p>
        <% end %>
      </div>
      <% end %>
    </div>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>