<div class="cover-user-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">プロフィール編集</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @user, local:true do |f| %>
      <% if @user.errors.any? %>
        <div class="card text-center card text-white bg-danger mb-3">
        <%= @user.errors.count %>件のエラーが発生しました
        <% @user.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
        </div>
      <% end %>
      <div class="form-group">
        <label class="form-label">名前</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">プロフィール画像</label><br>
        <%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "logo.png", class: "mb-3 profile-img" %><br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <label class="form-label">プロフィール</label>
        <%= f.text_field :profile, class: "form-control" %><br>
      </div>
      <%= f.submit '保存する', class: "btn btn-success mb-3" %>
      <% end %>
    </div>
  </div>
</div>
