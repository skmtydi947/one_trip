<%= stylesheet_link_tag "signup", :media => "all" %>

<div class="login-form">

<h2>ログイン</h2>

  <%= form_with model: @user, url: user_session_path, local: true do |f| %>
  
    <%= f.email_field :email, class:"login-email", autofocus: true, required: true, autocomplete: "email", placeholder: "Eメール" %>

    <%= f.password_field :password, class: "login-password", autofocus: true, autocomplete: "current-password", placeholder: "パスワード" %>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

