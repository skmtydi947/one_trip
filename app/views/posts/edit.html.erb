<div class="cover-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">旅行投稿編集</h1>
    </div>
    <% if @post.errors.any? %>
    <div class="card text-center card text-white bg-danger mb-3">
      <%= @post.errors.count %>件のエラーが発生しました
      <% @post.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    </div>
    <% end %>
    <div class="row justify-content-center">
      <%= form_with model: @post, local:true do |f| %>
      <div class="form-group">
        <label class="form-label">旅行先</label>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">住所</label>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">感想</label>
        <%=f.text_area :text, rows: 10, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">画像</label><br>
        <% @post.post_images.each do |image| %>
        <%= attachment_image_tag image, :image, format: 'jpeg', size: '190x133' %>
        <% end %>
        <%= f.attachment_field :post_images_images, multiple: true %>
      </div>
      <%= f.submit '保存する', class: "btn btn-success" %><br>
      <%= link_to '投稿詳細ページへ', post_path(@post), class: "btn btn-dark mt-3 mb-3" %>
      <% end %>
    </div>
  </div>
</div>